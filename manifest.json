{
  "manifest_version": 3,
  "name": "Keyword Redirector",
  "version": "1.3",
  "description": "Redirect by keyword with shortcut, QR, and Tailwind UI.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/i-16.png",
      "48": "icons/i-48.png",
      "128": "icons/i-128.png"
    }
  },
  "commands": {
    "open_keyword_popup": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "Open keyword input popup"
    }
  },
  "icons": {
    "16": "icons/i-16.png",
    "48": "icons/i-48.png",
    "128": "icons/i-128.png"
  }
}
